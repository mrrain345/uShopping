<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="333dip" />
            <stroke android:width="2dip" android:color="@color/colorButtonPrimary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="333dip" />
            <stroke android:width="2dip" android:startColor="@color/colorButtonPrimary" android:endColor="@color/colorButtonSecondary" />
            <solid android:color="@color/colorButtonSecondary"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <size android:width="290dp"></size>
            <corners android:radius="333dip" />
            <stroke android:width="2dip" android:color="@color/colorButtonSecondary" />
            <solid android:color="@color/colorButtonSecondary"/>
        </shape>
    </item>
</selector>